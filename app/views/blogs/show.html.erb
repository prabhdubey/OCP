  <!--start-single-->
  <div class="single">
    <div class="container">
        <div class="single-top">
         <%= image_tag @blog.image, :class=> "img-responsive" %>
          <div class=" single-grid">
            <h2> <%= @blog.title %></h2>       
              <ul class="blog-ic" style="padding-left: 0px;">
                <li><a href="#"><span> <i  class="glyphicon glyphicon-user"> </i> <%= @blog.author %></span> </a> </li>
                   <li><span><i class="glyphicon glyphicon-time"> </i> <%= @blog.updated_at.strftime("Published on %m/%d/%Y") %></span></li>                   
                   <li><span><i class="glyphicon glyphicon-eye-open"> </i>Hits:<%= @blog.views%></span></li>
                </ul>                 
            <p> <%= @blog.body.html_safe %></p>
          </div>
          <% if current_user.email== @blog.user.email %>
          <%= link_to 'Edit', edit_blog_path, :class => 'btn btn-info' %>
          <% end %>
          <% if @blog.flag ==1 %>
          <div class="comments heading">
          <br>
            <h3 style="padding-top: 7px;">Comments</h3><br>
            <div id="new_comment">
            <%= render @comments %>
          </div>
          </div>  
          
          <div class="comment-bottom heading">
            
              <%=render 'comments/form' %>
            </div>
            <% end %>
        </div>  
      </div>          
  </div>
  